{
	"manifest_version": 2,
	"name": "No Register",
	"author": "Bryan Azofeifa",
	"version": "1.0",
	"description": "Hide the awesome idea to register in the website",
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png" 
	},
	"page_action": {
		"default_icon": "icon.png",
		"default_title": "Hide Register"
	},
	"content_scripts": [
		{
			"matches": ["http://www.nacion.com/*"],
			"css": ["remove-modal.css"],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"tabs"
	]
}